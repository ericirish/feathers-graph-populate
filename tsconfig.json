{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "target": "es5",
    "downlevelIteration": true,
    "sourceMap": false,
    "declaration": true
  },
  "include": ["lib/**/*"],
  "exclude": [
    "node_modules",
    "src/**/*",
    "**/*.test.js"
  ]
}
