{
  "root": true,
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ]
  },
  "overrides": [
    {
      "files": ["**/*.js?(x)"],
      "parserOptions": {
        "ecmaVersion": 2017
      },
      "extends": "eslint:recommended"
    },
    {
      "files": ["**/*.ts?(x)"],
      "parser": "@typescript-eslint/parser",
      "plugins": [
        "@typescript-eslint"
      ],
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
        "@typescript-eslint/quotes": [
          "error",
          "single"
        ],
        "@typescript-eslint/semi": [
          "error",
          "never"
        ]
      }
    },
    {
      "files": ["test/**/*.test.ts?(x)"],
      "rules": {
        "@typescript-eslint/ban-ts-comment": [
          "off"
        ]
      }
    }
  ]
}
